DATA: lv_input  TYPE string,
      lv_output TYPE string,
      lv_char   TYPE c LENGTH 1,
      lv_len    TYPE i,
      lv_index  TYPE i.

lv_input = 'Ex5emplo 123, com #456 caracteres!'.

lv_len = STRLEN( lv_input ).

lv_output = ''.

DO lv_len TIMES.
  lv_index = sy-index - 1.
  lv_char = lv_input+lv_index(1).
  IF lv_char CO '0123456789'.
    CONCATENATE lv_output lv_char INTO lv_output.
  ENDIF.
ENDDO.

CONDENSE lv_output NO-GAPS.

WRITE: / 'String original: ', lv_input.
WRITE: / 'String somente n√∫meros: ', lv_output.
